<?xml version='1.0' encoding='utf-8'?>
<widget id="se.gwallen.djo" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>HelloCordova</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="browser">
        <preference name="ShowSplashScreen" value="false" />
    </platform>
    <platform name="android">
        <allow-intent href="market:*" />
        <icon density="hdpi" src="www/res/mipmap-hdpi/djo.png" />
        <icon density="mdpi" src="www/res/mipmap-mdpi/djo.png" />
        <icon density="xhdpi" src="www/res/mipmap-xhdpi/djo.png" />
        <splash density="port-hdpi" src="www/res/mipmap-hdpi/screen.png" />
        <splash density="port-mdpi" src="www/res/mipmap-mdpi/screen.png" />
        <splash density="port-xhdpi" src="www/res/mipmap-xhdpi/screen.png" />
        <splash density="land-hdpi" src="www/res/mipmap-hdpi/landscreen.png" />
        <splash density="land-mdpi" src="www/res/mipmap-mdpi/landscreen.png" />
        <splash density="land-xhdpi" src="www/res/mipmap-xhdpi/landscreen.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="android" spec="^6.2.3" />
    <engine name="browser" spec="^4.1.0" />
    <plugin name="cordova-plugin-browsersync" spec="^0.1.6" />
    <plugin name="cordova-plugin-device" spec="^1.1.6" />
    <plugin name="cordova-plugin-file" spec="^4.3.3" />
    <plugin name="cordova-plugin-network-information" spec="^1.3.3" />
    <plugin name="cordova-plugin-splashscreen" spec="^4.0.3" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.2" />
</widget>
